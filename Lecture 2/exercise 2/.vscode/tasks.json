{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build MD307 project",
            "command": "${config:mdx07-templates.makePath}${config:mdx07-templates.makeExecutable}",
            
            "args": [
                "all",
                "APP_NAME=${config:mdx07-templates.appName}"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "GCC_PATH": "${config:mdx07-templates.riscvToolchainPath}",
                    "PATH": "${config:mdx07-templates.riscvToolchainPath};${env:PATH}"
            },
            },
            "problemMatcher": [
                "$gcc",
                {
                    "owner": "as",
                    "fileLocation": ["relative", "${workspaceFolder}"],
                    "pattern": {
                        "regexp": "^(.*):(\\d+):\\s*(Error|Warning):\\s*(.*)$",
                        "file": 1,
                        "line": 2,
                        "severity": 3,
                        "message": 4
                    }
                },
                {
                    "owner": "ld",
                    "fileLocation": ["absolute"],
                    "pattern": {
                        "regexp": "^(.*):(\\d+):\\s*(.*):\\s*(.*)$",
                        "file": 1,
                        "line": 2,
                        "severity": 3,
                        "message": 4
                    }
                }
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Clean MD307 project",
            "command": "${config:mdx07-templates.makePath}${config:mdx07-templates.makeExecutable}",
            "args": [
                "clean",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        }
    ]
}